{% extends 'layouts/base.html.twig' %}

{% block title 'Register!'%}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            
    
        <h1 class="my-5 text-center">Cr√©e un compte</h1>
    
        {{ form_start(registrationForm) }}
    
            <div class="row">
                <div class="col-md-6"> {{ form_row(registrationForm.firstName) }}</div>
                <div class="col-md-6"> {{ form_row(registrationForm.lastName) }}</div>
            </div>
            <div class="row">
                <div class="col-md-6"> {{ form_row(registrationForm.phoneNumber) }}</div>
                <div class="col-md-6"> {{ form_row(registrationForm.parcPlace) }}</div>
            </div>
            {{  form_row(registrationForm.imageFile) }}
            {{ form_row(registrationForm.languageUse) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword, {
                label: 'Password'
            }) }}
            {{ form_row(registrationForm.agreeTerms) }}
            <div class="d-grid gap-2">
            <button type="submit" class="btn  btn-primary " formnovalidate>Register</button>
            </div>
        {{ form_end(registrationForm) }}
    
        <p class="mt-5 mb-3 text-center text-muted">
            Already have an account ? <a href="{{path('app_login')  }}">Log in</a>
        </p>
        </div>
    </div>
</div>
   
{% endblock %}
